<UserControl x:Class="organizer.TaskGroupPlate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:organizer"
             mc:Ignorable="d" 
             d:MinHeight="60" MaxHeight="60" MinWidth="300" MaxWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="39*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Button Background="#FF3F3F3F" Grid.ColumnSpan="2" MinHeight="60" MaxHeight="60" MinWidth="300" MaxWidth="300" Click="Plate_Click"/>
        <TextBlock x:Name ="Txt_GroupName" Text="Название группы" Margin="15,0,0,0" VerticalAlignment="Center"  FontFamily="Century Gothic" Foreground="White" FontSize="16"/>
        <TextBlock x:Name="Txt_TaskCounter" Text="num" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0" FontFamily="Century Gothic" Foreground="White" FontSize="16" Width="40" TextAlignment="Right" Grid.Column="1"/>
    </Grid>
</UserControl>
