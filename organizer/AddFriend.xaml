<Window x:Class="organizer.AddFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer"
        mc:Ignorable="d"
        Title="Добавить друга" Height="140" Width="400">
    <Grid Background="#FF3F3F3F">
        <Label  FontFamily="Century Gothic" Foreground="White" FontSize="16" Content="Код приглашения друга:" HorizontalAlignment="Left" Margin="23,18,0,0" VerticalAlignment="Top" Width="209"/>
        <WrapPanel HorizontalAlignment="Left" Margin="23,53,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <TextBox x:Name="Txt_AddCode" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="236" Height="35"/>

            <Button x:Name="Btn_AddFriend" Margin="20,0,0,0" FontFamily="Century Gothic" FontSize="16" Content="Добавить" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="99" Click="Btn_AddFriend_Click"/>
        </WrapPanel>

    </Grid>
</Window>
