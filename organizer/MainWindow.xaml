<Window x:Class="organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000" Background="#FF1D1C1C">
    <Grid>
        <Button x:Name="Btn_MainPage" Content="Главная" HorizontalAlignment="Left" Margin="28,61,0,0" Width="134" Click="Btn_MainPage_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" BorderBrush="#FF4E4E4E" Foreground="White" Background="#FF5C5C5C"/>
        <Button x:Name="Btn_ListPage" Content="Списки" HorizontalAlignment="Left" Margin="28,129,0,0" Width="134" Click="Btn_ListPage_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White"/>
        <Button x:Name="Btn_AccountPage" Content="Аккаунт" HorizontalAlignment="Left" Margin="28,198,0,0" Width="134" Click="Btn_AccountPage_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White"/>
        <local:RepeatableTaskPlate x:Name="Plate1" HorizontalAlignment="Left" Margin="181,37,0,0" VerticalAlignment="Top" Height="122" Width="306"/>
        <local:PlainTaskPlate x:Name="Plate2" HorizontalAlignment="Left" Margin="181,171,0,0" VerticalAlignment="Top" Height="112" Width="306"/>
        <local:PlainTaskPlate x:Name="Plate3" HorizontalAlignment="Left" Margin="181,297,0,0" VerticalAlignment="Top" Height="107" Width="306"/>
        <Button x:Name="Btn_AddTask" Content="Создать задачу" HorizontalAlignment="Left" Margin="28,313,0,0" Width="134" Click="Btn_AddTask_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White"/>
        <ScrollViewer Margin="592,36,75,31">
            <StackPanel x:Name="View_TaskList">
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>
