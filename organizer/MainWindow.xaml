<Window x:Class="organizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:organizer"
        mc:Ignorable="d"
        Title="Мои задачи" Height="450" Width="1000" Background="#FF1D1C1C" Foreground="White" Icon="/free-icon-user-747376.png">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="177*"/>
            <ColumnDefinition Width="404*"/>
            <ColumnDefinition Width="419*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Btn_MainPage" Content="Главная" HorizontalAlignment="Left" Margin="28,61,0,0" Width="134" Click="Btn_MainPage_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" BorderBrush="#FF4E4E4E" Foreground="White" Background="#FF5C5C5C" />
        <Button x:Name="Btn_ListPage" Content="Списки" HorizontalAlignment="Left" Margin="28,129,0,0" Width="134" Click="Btn_ListPage_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White" />
        <Button x:Name="Btn_AccountPage" Content="Аккаунт" HorizontalAlignment="Left" Margin="28,0,0,0" Width="134" Click="Btn_AccountPage_Click" Height="38" VerticalAlignment="Center" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White" />
        <Button x:Name="Btn_AddTask" Content="Создать задачу" HorizontalAlignment="Left" Margin="28,313,0,0" Width="134" Click="Btn_AddTask_Click" Height="38" VerticalAlignment="Top" FontFamily="Century Gothic" FontWeight="Bold" Background="#FF5C5C5C" BorderBrush="#FF4E4E4E" Foreground="White" />
        <ScrollViewer Margin="19,34,36,33" Grid.Column="2">
            <StackPanel x:Name="View_TaskList">
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
                <local:PlainTaskPlate Width="300" Height="100"></local:PlainTaskPlate>
            </StackPanel>
        </ScrollViewer>
        <ScrollViewer Margin="19,34,36,33" Grid.Column="1">
            <StackPanel x:Name="View_Lists">
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
                <local:TaskGroupPlate></local:TaskGroupPlate>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
